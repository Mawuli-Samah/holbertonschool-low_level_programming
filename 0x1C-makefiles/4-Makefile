# Makefile for holberton, version 0.3

NAME = holberton

CC = gcc
CFLAGS = -g -Wall -Werror -Wextra -pedantic
OBJ = holberton.o main.o
SRC = holberton.c main.c

TMPFILES = *~ .*.sw[op]

RM = rm -f

all: $(OBJ)
	$(CC) $^ -o $(NAME)

obj: $(SRC)
	$(CC) $(CFLAGS) $^

clean:
	$(RM) $(NAME) $(TMPFILES)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean obj all
